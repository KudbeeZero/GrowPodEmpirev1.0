# GrowPod Empire - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# Algorand Configuration (Required for blockchain features)
# ============================================
VITE_GROWPOD_APP_ID=754825112
VITE_BUD_ASSET_ID=754825127
VITE_TERP_ASSET_ID=754825128
VITE_SLOT_ASSET_ID=754825129
VITE_GROWPOD_APP_ADDRESS=6P55NJ7FDJSZA2YSZNT2HRF2FBIUYNKBZLPX4LJ72Q76SBDN4VAB65W6KM

# ============================================
# Admin Configuration
# ============================================
ADMIN_WALLET_ADDRESS=YOUR_ADMIN_WALLET_ADDRESS

# ============================================
# Database (PostgreSQL - for Express backend)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/growpod

# ============================================
# Contract Deployment ONLY (DO NOT USE IN PRODUCTION)
# ============================================
# WARNING: Never commit your mnemonic!
# Only set this when deploying contracts via CLI
# ALGO_MNEMONIC=word1 word2 word3 ... word25

# ============================================
# Cloudflare Workers Configuration
# ============================================
# Account ID: Found in Cloudflare Dashboard → Workers & Pages → Overview
CLOUDFLARE_ACCOUNT_ID=your_account_id

# D1 Database ID: Created with `wrangler d1 create growpod-empire-db`
CLOUDFLARE_D1_DATABASE_ID=your_database_id

# API Token: For wrangler CLI authentication
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Workers Scripts (Edit), D1 (Edit)
CLOUDFLARE_API_TOKEN=your_api_token

# ============================================
# Security Monitoring (Optional)
# ============================================
# Email for security reports
SECURITY_EMAIL=your_email@example.com

# Resend API key for sending emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key
